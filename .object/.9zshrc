#echo ""
ZSH_THEME="agnoster" # Or your preferred theme
plugins=(git)

# --- Source ZSH ---
source $HOME/.oh-my-zsh/oh-my-zsh.sh
source /data/data/com.termux/files/home/.oh-my-zsh/plugins/zsh-autosuggestions/zsh-autosuggestions.zsh
source /data/data/com.termux/files/home/.oh-my-zsh/plugins/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh

# --- Advanced Visuals ---
HIDECURSOR(){ echo -en "\033[?25l";}
SHOWCURSOR(){ echo -en "\033[?25h";}

# Colors
RED="\033[1;31m"
GREEN="\033[1;32m"
BLUE="\033[1;34m"
CYAN="\033[1;36m"
YELLOW="\033[1;33m"
WHITE="\033[1;37m"
RESET="\033[0m"

# --- Fetch System Data ---
# Get Disk Usage of /data
DISK_USAGE=$(df -h /data | tail -1 | awk '{print $5}')
# Get Memory Usage (approximate for Termux)
MEM_FREE=$(free -m | grep Mem | awk '{print $4}')
MEM_TOTAL=$(free -m | grep Mem | awk '{print $2}')

clear
HIDECURSOR

echo -e "${CYAN}╔══════════════════════════════════════════════════════╗"
echo -e "${CYAN}║ ${RED}● ${YELLOW}● ${GREEN}● ${WHITE}TERMINAL: ${GREEN}ONLINE ${CYAN}                              ║"
echo -e "${CYAN}╠══════════════════════════════════════════════════════╣"
echo -e "${CYAN}║ ${RED}USER     : ${WHITE}PROC"
echo -e "${CYAN}║ ${RED}SYSTEM   : ${WHITE}$(uname -o)"
echo -e "${CYAN}║ ${RED}KERNEL   : ${WHITE}$(uname -r | cut -d'-' -f1)"
echo -e "${CYAN}║ ${RED}STORAGE  : ${YELLOW}${DISK_USAGE} used"
echo -e "${CYAN}║ ${RED}MEMORY   : ${GREEN}${MEM_FREE}MB free / ${MEM_TOTAL}MB total"
echo -e "${CYAN}╠══════════════════════════════════════════════════════╣"
echo -e "${CYAN}║                                                      ║"
echo -e "${CYAN}║ ${GREEN}      .::.                                         ${CYAN}║"
echo -e "${CYAN}║ ${GREEN}    .;:**'            ${WHITE}CONNECTION ESTABLISHED       ${CYAN}║"
echo -e "${CYAN}║ ${GREEN}    \`                  ${WHITE}IP: 127.0.0.1               ${CYAN}║"
echo -e "${CYAN}║ ${GREEN}   .:Xhhhhk.              ${WHITE}PORT: 8080               ${CYAN}║"
echo -e "${CYAN}║ ${GREEN}  oXXXfXXMXXo                                      ${CYAN}║"
echo -e "${CYAN}║ ${GREEN}  '  .XXk''                                        ${CYAN}║"
echo -e "${CYAN}║                                                      ║"
echo -e "${CYAN}╚══════════════════════════════════════════════════════╝${RESET}"

# --- Custom Advanced Prompt ---
# Changes the prompt to: ┌─[USER]─[DIR]
#                        └──╼ 
export PS1="${CYAN}┌─[${RED}PROC${CYAN}]─[${YELLOW}%~${CYAN}]
${CYAN}└──╼ ${RESET}"

SHOWCURSOR
